<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="android:textColor">@color/text</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnPrimary">@color/text_inverse</item>
        <item name="colorOnSecondary">@color/text_inverse</item>
        <item name="colorOnBackground">@color/text</item>
        <item name="colorOnSurface">@color/text</item>
    </style>
    
    <!-- Custom AlertDialog style -->
    <style name="CustomAlertDialog" parent="Theme.Material3.DayNight.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>
        <item name="android:windowSoftInputMode">stateHidden</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>
</resources>