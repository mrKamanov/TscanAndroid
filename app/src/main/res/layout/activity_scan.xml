<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Основной контент -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Контейнер камеры с результатами -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="72dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <!-- Контейнер камеры -->
            <FrameLayout
                android:id="@+id/camera_container"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:layout_gravity="center"
                android:background="@drawable/menu_card_bg"
                android:elevation="8dp">
                <!-- Здесь будет SurfaceView/ImageView для камеры -->
                <androidx.camera.view.PreviewView
                    android:id="@+id/camera_preview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" />

                <ImageView
                    android:id="@+id/result_overlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:visibility="visible" />

                <!-- Оверлей для сетки -->
                <LinearLayout
                    android:id="@+id/grid_overlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:visibility="gone"
                    android:orientation="vertical" />

                <!-- Оверлей для результатов проверки -->
                <FrameLayout
                    android:id="@+id/results_overlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:visibility="gone" />
            </FrameLayout>

            <!-- Секция результатов -->
            <androidx.cardview.widget.CardView
                android:id="@+id/result_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Результаты сканирования"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/scan_results"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Нет данных"
                        android:textSize="14sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Панель управления под видеопотоком (только иконки) -->
        <LinearLayout
            android:id="@+id/video_controls_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_update_answers"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                app:icon="@drawable/update_answers_button"
                app:iconSize="32dp"
                app:iconTint="@color/text_inverse"
                app:iconGravity="textTop"
                android:backgroundTint="@color/primary"
                app:cornerRadius="16dp"
                app:strokeColor="@color/text_inverse"
                app:strokeWidth="2dp"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:contentDescription="@string/update_answers_button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_to_report"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                app:icon="@drawable/add_to_report_button"
                app:iconSize="32dp"
                app:iconTint="@color/text_inverse"
                app:iconGravity="textTop"
                android:backgroundTint="@color/success"
                app:cornerRadius="16dp"
                app:strokeColor="@color/text_inverse"
                app:strokeWidth="2dp"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:contentDescription="@string/add_to_report_button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_toggle_grid"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                app:icon="@drawable/ic_grid_on"
                app:iconSize="32dp"
                app:iconTint="@color/text_inverse"
                app:iconGravity="textTop"
                android:backgroundTint="@color/secondary"
                app:cornerRadius="16dp"
                app:strokeColor="@color/text_inverse"
                app:strokeWidth="2dp"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:contentDescription="@string/toggle_grid_button" />

            <!-- Кнопка "Включить проверку" -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_toggle_processing"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                app:icon="@drawable/ic_check_circle"
                app:iconSize="32dp"
                app:iconTint="@color/text_inverse"
                app:iconGravity="textTop"
                android:backgroundTint="@color/success"
                app:cornerRadius="16dp"
                app:strokeColor="@color/text_inverse"
                app:strokeWidth="2dp"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:contentDescription="Показать/скрыть результаты" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_overlay_mode"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                app:icon="@drawable/ic_layers"
                app:iconSize="32dp"
                app:iconTint="@color/text_inverse"
                app:iconGravity="textTop"
                android:backgroundTint="@color/secondary"
                app:cornerRadius="16dp"
                app:strokeColor="@color/text_inverse"
                app:strokeWidth="2dp"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:contentDescription="@string/overlay_mode_button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_camera_settings"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                app:icon="@drawable/camera_settings_button"
                app:iconSize="32dp"
                app:iconTint="@color/text_inverse"
                app:iconGravity="textTop"
                android:backgroundTint="@color/primary"
                app:cornerRadius="16dp"
                app:strokeColor="@color/text_inverse"
                app:strokeWidth="2dp"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:contentDescription="@string/camera_settings_button" />
        </LinearLayout>
        
        <!-- Система уведомлений -->
        <FrameLayout
            android:id="@+id/notification_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="80dp"
            android:visibility="gone">
            
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/success">
                
                <TextView
                    android:id="@+id/notification_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Операция выполнена успешно"
                    android:textColor="@color/text_inverse"
                    android:textSize="14sp"
                    android:padding="12dp" />
            </androidx.cardview.widget.CardView>
        </FrameLayout>

        <!-- Прогресс-бар ML обработки -->
        <FrameLayout
            android:id="@+id/ml_progress_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone">
            
            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="16dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="@color/surface">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ML Обработка"
                        android:textColor="@color/text"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/krabuler"
                        android:layout_marginBottom="16dp" />
                    
                    <ProgressBar
                        android:id="@+id/ml_progress_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginBottom="12dp"
                        android:progress="0"
                        android:max="100"
                        android:progressTint="@color/accent" />
                    
                    <TextView
                        android:id="@+id/ml_progress_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Подготовка..."
                        android:textColor="@color/text"
                        android:textSize="14sp"
                        android:fontFamily="@font/krabuler" />
                    
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </FrameLayout>

        <!-- Кнопка "Стоп-кадр" в стиле фотокамеры -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="120dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_stop_frame"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                app:icon="@drawable/stop_frame_button"
                app:iconSize="70dp"
                app:iconTint="@color/text_inverse"
                app:iconGravity="textTop"
                android:backgroundTint="@color/accent"
                app:cornerRadius="45dp"
                app:strokeColor="@color/text_inverse"
                app:strokeWidth="3dp"
                app:elevation="8dp"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:contentDescription="Остановить кадр и запустить ML обработку" />

        </FrameLayout>

    </FrameLayout>

    <!-- Боковое меню -->
    <include layout="@layout/drawer_settings" />

    <!-- Правый Drawer для настроек камеры -->
    <include
        layout="@layout/drawer_camera_settings"
        android:id="@+id/drawer_camera_settings"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="end" />

</androidx.drawerlayout.widget.DrawerLayout>