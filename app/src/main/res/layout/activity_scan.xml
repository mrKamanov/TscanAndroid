<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Основной контент -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Контейнер камеры с результатами -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="72dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <!-- Контейнер камеры -->
            <FrameLayout
                android:id="@+id/camera_container"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:layout_gravity="center"
                android:background="@drawable/menu_card_bg"
                android:elevation="8dp">
                <!-- Здесь будет SurfaceView/ImageView для камеры -->
                <androidx.camera.view.PreviewView
                    android:id="@+id/camera_preview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" />

                <ImageView
                    android:id="@+id/result_overlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:visibility="visible" />

                <!-- Оверлей для сетки -->
                <LinearLayout
                    android:id="@+id/grid_overlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:visibility="gone"
                    android:orientation="vertical" />

                <!-- Оверлей для результатов проверки -->
                <FrameLayout
                    android:id="@+id/results_overlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:visibility="gone" />
            </FrameLayout>

            <!-- Секция результатов -->
            <androidx.cardview.widget.CardView
                android:id="@+id/result_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="📋 Результаты проверки"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/primary"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/scan_results"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Нет данных"
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp"
                        android:textColor="@color/text"
                        android:fontFamily="monospace"
                        android:background="@drawable/menu_card_bg"
                        android:padding="12dp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- ========== ПАНЕЛЬ УПРАВЛЕНИЯ С КРУГЛЫМИ КНОПКАМИ ========== -->
        <LinearLayout
            android:id="@+id/video_controls_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <!-- Обновить ответы -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_update_answers"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_weight="0"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:padding="0dp"
                app:icon="@drawable/update_answers_button"
                app:iconTint="#CBD5E1"
                app:iconGravity="textStart"
                app:iconSize="32dp"
                app:iconPadding="0dp"
                android:backgroundTint="#1E293B"
                app:cornerRadius="28dp"
                app:strokeColor="#475569"
                app:strokeWidth="2dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:elevation="0dp"
                android:stateListAnimator="@null"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:contentDescription="@string/update_answers_button" />

            <!-- Добавить в отчет -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_to_report"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_weight="0"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:padding="0dp"
                app:icon="@drawable/add_to_report_button"
                app:iconTint="#FFFFFF"
                app:iconGravity="textStart"
                app:iconSize="32dp"
                app:iconPadding="0dp"
                android:backgroundTint="#16A34A"
                app:cornerRadius="28dp"
                app:strokeColor="#475569"
                app:strokeWidth="2dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:elevation="0dp"
                android:stateListAnimator="@null"
                style="@style/Widget.MaterialComponents.Button"
                android:contentDescription="@string/add_to_report_button" />

            <!-- Показать сетку -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_toggle_grid"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_weight="0"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:padding="0dp"
                app:icon="@drawable/ic_grid_on"
                app:iconTint="#CBD5E1"
                app:iconGravity="textStart"
                app:iconSize="32dp"
                app:iconPadding="0dp"
                android:backgroundTint="#1E293B"
                app:cornerRadius="28dp"
                app:strokeColor="#475569"
                app:strokeWidth="2dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:elevation="0dp"
                android:stateListAnimator="@null"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:contentDescription="@string/toggle_grid_button" />

            <!-- Включить проверку -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_toggle_processing"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_weight="0"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:padding="0dp"
                app:icon="@drawable/ic_check_circle"
                app:iconTint="#FFFFFF"
                app:iconGravity="textStart"
                app:iconSize="32dp"
                app:iconPadding="0dp"
                android:backgroundTint="#16A34A"
                app:cornerRadius="28dp"
                app:strokeColor="#475569"
                app:strokeWidth="2dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:elevation="0dp"
                android:stateListAnimator="@null"
                style="@style/Widget.MaterialComponents.Button"
                android:contentDescription="Показать/скрыть результаты" />

            <!-- Настройки камеры -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_camera_settings"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_weight="0"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:padding="0dp"
                app:icon="@drawable/camera_settings_button"
                app:iconTint="#CBD5E1"
                app:iconGravity="textStart"
                app:iconSize="32dp"
                app:iconPadding="0dp"
                android:backgroundTint="#1E293B"
                app:cornerRadius="28dp"
                app:strokeColor="#475569"
                app:strokeWidth="2dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:elevation="0dp"
                android:stateListAnimator="@null"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:contentDescription="@string/camera_settings_button" />
        </LinearLayout>

        <!-- Система уведомлений -->
        <FrameLayout
            android:id="@+id/notification_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="80dp"
            android:visibility="gone">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/success">

                <TextView
                    android:id="@+id/notification_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Операция выполнена успешно"
                    android:textColor="@color/text_inverse"
                    android:textSize="14sp"
                    android:padding="12dp" />
            </androidx.cardview.widget.CardView>
        </FrameLayout>

        <!-- Прогресс-бар ML обработки -->
        <FrameLayout
            android:id="@+id/ml_progress_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone">

            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="16dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ML Обработка"
                        android:textColor="@color/text"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/krabuler"
                        android:layout_marginBottom="16dp" />

                    <ProgressBar
                        android:id="@+id/ml_progress_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginBottom="12dp"
                        android:progress="0"
                        android:max="100"
                        android:progressTint="@color/accent" />

                    <TextView
                        android:id="@+id/ml_progress_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Подготовка..."
                        android:textColor="@color/text"
                        android:textSize="14sp"
                        android:fontFamily="@font/krabuler" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </FrameLayout>

        <!-- ========== КНОПКА "СТОП-КАДР" В КРУГЛОМ СТИЛЕ ========== -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="120dp">

            <!-- Большая круглая кнопка стоп-кадр -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_stop_frame"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_gravity="center"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:padding="0dp"
                app:icon="@drawable/stop_frame_button"
                app:iconSize="56dp"
                app:iconTint="#FFFFFF"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                android:backgroundTint="#DC2626"
                app:cornerRadius="48dp"
                app:strokeColor="#475569"
                app:strokeWidth="3dp"
                android:elevation="0dp"
                android:stateListAnimator="@null"
                style="@style/Widget.MaterialComponents.Button"
                android:contentDescription="Остановить кадр и запустить ML обработку" />

        </FrameLayout>

    </FrameLayout>

    <!-- Боковое меню -->
    <include layout="@layout/drawer_settings" />

    <!-- Правый Drawer для настроек камеры -->
    <include
        layout="@layout/drawer_camera_settings"
        android:id="@+id/drawer_camera_settings"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="end" />

</androidx.drawerlayout.widget.DrawerLayout>