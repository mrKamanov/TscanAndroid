<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Основной контент -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Контейнер камеры с результатами -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="72dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <!-- Контейнер камеры -->
            <FrameLayout
                android:id="@+id/camera_container"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:layout_gravity="center"
                android:background="@drawable/menu_card_bg"
                android:elevation="8dp">
                <!-- Здесь будет SurfaceView/ImageView для камеры -->
                <SurfaceView
                    android:id="@+id/camera_preview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" />

                <!-- Оверлей для сетки -->
                <View
                    android:id="@+id/grid_overlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:visibility="gone" />
            </FrameLayout>

            <!-- Секция результатов -->
            <androidx.cardview.widget.CardView
                android:id="@+id/result_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Результаты сканирования"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/scan_results"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Нет данных"
                        android:textSize="14sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Панель управления под видеопотоком (только иконки) -->
        <LinearLayout
            android:id="@+id/video_controls_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_stop_frame"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                app:icon="@drawable/stop_frame_button"
                app:iconTint="@color/text_inverse"
                android:backgroundTint="@color/primary"
                app:cornerRadius="16dp"
                app:strokeColor="@color/text_inverse"
                app:strokeWidth="2dp"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:contentDescription="@string/stop_frame_button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_to_report"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                app:icon="@drawable/add_to_report_button"
                app:iconTint="@color/text_inverse"
                android:backgroundTint="@color/success"
                app:cornerRadius="16dp"
                app:strokeColor="@color/text_inverse"
                app:strokeWidth="2dp"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:contentDescription="@string/add_to_report_button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_toggle_grid"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                app:icon="@drawable/ic_grid_on"
                app:iconTint="@color/text_inverse"
                android:backgroundTint="@color/secondary"
                app:cornerRadius="16dp"
                app:strokeColor="@color/text_inverse"
                app:strokeWidth="2dp"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:contentDescription="@string/toggle_grid_button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_update_answers"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                app:icon="@drawable/update_answers_button"
                app:iconTint="@color/text_inverse"
                android:backgroundTint="@color/primary"
                app:cornerRadius="16dp"
                app:strokeColor="@color/text_inverse"
                app:strokeWidth="2dp"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:contentDescription="@string/update_answers_button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_overlay_mode"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                app:icon="@drawable/ic_layers"
                app:iconTint="@color/text_inverse"
                android:backgroundTint="@color/secondary"
                app:cornerRadius="16dp"
                app:strokeColor="@color/text_inverse"
                app:strokeWidth="2dp"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:contentDescription="@string/overlay_mode_button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_camera_settings"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                app:icon="@drawable/camera_settings_button"
                app:iconTint="@color/text_inverse"
                android:backgroundTint="@color/primary"
                app:cornerRadius="16dp"
                app:strokeColor="@color/text_inverse"
                app:strokeWidth="2dp"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:contentDescription="@string/camera_settings_button" />
        </LinearLayout>
        
        <!-- Система уведомлений -->
        <FrameLayout
            android:id="@+id/notification_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="80dp"
            android:visibility="gone">
            
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/success">
                
                <TextView
                    android:id="@+id/notification_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Операция выполнена успешно"
                    android:textColor="@color/text_inverse"
                    android:textSize="14sp"
                    android:padding="12dp" />
            </androidx.cardview.widget.CardView>
        </FrameLayout>

    </FrameLayout>

    <!-- Боковое меню -->
    <include layout="@layout/drawer_settings" />

    <!-- Правый Drawer для настроек камеры -->
    <LinearLayout
        android:id="@+id/drawer_camera_settings"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:orientation="vertical"
        android:background="@drawable/drawer_background"
        android:elevation="16dp"
        android:padding="24dp">

        <!-- Заголовок и кнопка закрытия -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|end"
            android:paddingBottom="16dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Настройки камеры"
                android:textStyle="bold"
                android:textSize="18sp"/>
            <ImageButton
                android:id="@+id/btn_close_camera_settings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@drawable/close_settings_button"
                android:contentDescription="@string/close_settings_button"/>
        </LinearLayout>

        <!-- Яркость -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/brightness_label"
                android:layout_marginEnd="8dp"/>
            <SeekBar
                android:id="@+id/seek_brightness"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="200"
                android:progress="100"/>
            <TextView
                android:id="@+id/value_brightness"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"/>
        </LinearLayout>

        <!-- Контраст -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contrast_label"
                android:layout_marginEnd="8dp"/>
            <SeekBar
                android:id="@+id/seek_contrast"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="200"
                android:progress="100"/>
            <TextView
                android:id="@+id/value_contrast"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="100"/>
        </LinearLayout>

        <!-- Насыщенность -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/saturation_label"
                android:layout_marginEnd="8dp"/>
            <SeekBar
                android:id="@+id/seek_saturation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="200"
                android:progress="100"/>
            <TextView
                android:id="@+id/value_saturation"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="100"/>
        </LinearLayout>

        <!-- Резкость -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sharpness_label"
                android:layout_marginEnd="8dp"/>
            <SeekBar
                android:id="@+id/seek_sharpness"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:progress="10"/>
            <TextView
                android:id="@+id/value_sharpness"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="10"/>
        </LinearLayout>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>