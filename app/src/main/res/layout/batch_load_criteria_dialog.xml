<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background_dark"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Загрузить критерии"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_inverse"
        android:fontFamily="@font/krabuler"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Нажмите на критерии для загрузки:"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="12dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="200dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:id="@+id/layout_criteria_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <!-- ========== КНОПКА В ЕДИНОМ ОВАЛЬНОМ СТИЛЕ ========== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Кнопка Отмена (серая овальная как в шаблоне) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel_load"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Отмена"
            android:textColor="#CBD5E1"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="@font/krabuler"
            android:backgroundTint="#1E293B"
            app:cornerRadius="28dp"
            app:strokeColor="#475569"
            app:strokeWidth="2dp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:elevation="0dp"
            android:stateListAnimator="@null"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:contentDescription="Отменить загрузку критериев" />
    </LinearLayout>

</LinearLayout>
