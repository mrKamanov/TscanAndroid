<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background_dark"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Фотография бланка"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_inverse"
        android:fontFamily="@font/krabuler"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tv_work_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Работа 1"
        android:textSize="16sp"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="12dp" />

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitCenter"
        android:background="@drawable/edit_text_background"
        android:layout_marginBottom="16dp" />

    <!-- ========== ТРИ КНОПКИ В ЕДИНОМ ОВАЛЬНОМ СТИЛЕ (ИСПРАВЛЕННЫЕ) ========== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingStart="4dp"
        android:paddingEnd="4dp">

        <!-- Кнопка Переснять (серая овальная) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_retake"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="ПЕРЕСНЯТЬ"
            android:textColor="#CBD5E1"
            android:textStyle="bold"
            android:textSize="12sp"
            android:fontFamily="@font/krabuler"
            android:backgroundTint="#1E293B"
            app:cornerRadius="24dp"
            app:strokeColor="#475569"
            app:strokeWidth="1dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginEnd="4dp"
            android:elevation="0dp"
            android:stateListAnimator="@null"
            app:iconPadding="0dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:contentDescription="Переснять фотографию" />

        <!-- Кнопка Добавить (зеленая овальная) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add_photo"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="ДОБАВИТЬ"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="12sp"
            android:fontFamily="@font/krabuler"
            android:backgroundTint="#16A34A"
            app:cornerRadius="24dp"
            app:strokeColor="#475569"
            app:strokeWidth="1dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:elevation="0dp"
            android:stateListAnimator="@null"
            app:iconPadding="0dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            style="@style/Widget.MaterialComponents.Button"
            android:contentDescription="Добавить фотографию в отчет" />

        <!-- Кнопка Завершить (красная овальная) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_finish_camera"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="ЗАВЕРШИТЬ"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="12sp"
            android:fontFamily="@font/krabuler"
            android:backgroundTint="#DC2626"
            app:cornerRadius="24dp"
            app:strokeColor="#475569"
            app:strokeWidth="1dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginStart="4dp"
            android:elevation="0dp"
            android:stateListAnimator="@null"
            app:iconPadding="0dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            style="@style/Widget.MaterialComponents.Button"
            android:contentDescription="Завершить фотографирование" />
    </LinearLayout>

</LinearLayout>
