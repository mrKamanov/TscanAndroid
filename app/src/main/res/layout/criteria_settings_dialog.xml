<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/drawer_background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="⚙️ Настройки критериев"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="@font/krabuler"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">

        <LinearLayout
            android:id="@+id/criteria_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </ScrollView>

    <!-- ========== ДВЕ КНОПКИ В ЕДИНОМ ОВАЛЬНОМ СТИЛЕ ========== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Кнопка Удалить (красная овальная как в шаблоне) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_delete_criteria"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Удалить"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="@font/krabuler"
            android:backgroundTint="#DC2626"
            app:cornerRadius="28dp"
            app:strokeColor="#475569"
            app:strokeWidth="2dp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:layout_marginEnd="8dp"
            android:elevation="0dp"
            android:stateListAnimator="@null"
            style="@style/Widget.MaterialComponents.Button"
            android:contentDescription="Удалить выбранные критерии" />

        <!-- Кнопка Закрыть (серая овальная как в шаблоне) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_close"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Закрыть"
            android:textColor="#CBD5E1"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="@font/krabuler"
            android:backgroundTint="#1E293B"
            app:cornerRadius="28dp"
            app:strokeColor="#475569"
            app:strokeWidth="2dp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:layout_marginStart="8dp"
            android:elevation="0dp"
            android:stateListAnimator="@null"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:contentDescription="Закрыть настройки критериев" />

    </LinearLayout>

</LinearLayout>
