<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/drawer_background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="⚙️ Настройки критериев"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="@font/krabuler"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">

        <LinearLayout
            android:id="@+id/criteria_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </ScrollView>

    <!-- Кнопки -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_delete_criteria"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Удалить"
            android:textSize="14sp"
            android:background="@drawable/close_settings_button"
            android:textColor="@color/white"
            android:fontFamily="@font/krabuler"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btn_close"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Закрыть"
            android:textSize="14sp"
            android:background="@drawable/apply_settings_button"
            android:textColor="@color/white"
            android:fontFamily="@font/krabuler"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout> 