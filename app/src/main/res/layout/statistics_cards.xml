<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📈 Общая статистика"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:fontFamily="@font/krabuler"
        android:layout_marginBottom="16dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:useDefaultMargins="true">

        <!-- Всего работ -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_total_works"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#4CAF50">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📚"
                    android:textSize="24sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_total_works_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/krabuler"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Всего работ"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/krabuler" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Средний балл -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_average_grade"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#2196F3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📊"
                    android:textSize="24sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_average_grade_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/krabuler"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Средний балл"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/krabuler" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Процент успеваемости -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_success_rate"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FF9800">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🎯"
                    android:textSize="24sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_success_rate_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/krabuler"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Успеваемость"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/krabuler" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Качество знаний -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_best_result"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#9C27B0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📈"
                    android:textSize="24sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_best_result_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="К/з 0%"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/krabuler"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_sou_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="СОУ 0%"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/krabuler"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </GridLayout>

</LinearLayout> 