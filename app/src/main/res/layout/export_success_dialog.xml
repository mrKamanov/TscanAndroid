<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/dialog_background_dark">

    <!-- Иконка успеха -->
    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_check_circle"
        app:tint="@color/success_green" />

    <!-- Заголовок -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="✅ Экспорт завершен!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Информация о файле -->
    <TextView
        android:id="@+id/tv_file_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Файл сохранен в папке 'Загрузки'"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- ========== ДВЕ КНОПКИ В ЕДИНОМ ОВАЛЬНОМ СТИЛЕ ========== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Кнопка Открыть папку (синяя овальная) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_open_file"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="📂 Открыть папку"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="14sp"
            android:fontFamily="@font/krabuler"
            android:backgroundTint="#2563EB"
            app:cornerRadius="24dp"
            app:strokeColor="#475569"
            app:strokeWidth="2dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:elevation="0dp"
            android:stateListAnimator="@null"
            style="@style/Widget.MaterialComponents.Button"
            android:contentDescription="Открыть папку" />

        <!-- Кнопка Отправить (зеленая овальная) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_share_file"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="📤 Отправить"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="14sp"
            android:fontFamily="@font/krabuler"
            android:backgroundTint="#16A34A"
            app:cornerRadius="24dp"
            app:strokeColor="#475569"
            app:strokeWidth="2dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:elevation="0dp"
            android:stateListAnimator="@null"
            style="@style/Widget.MaterialComponents.Button"
            android:contentDescription="Отправить экспортированный файл" />

    </LinearLayout>

    <!-- ========== КНОПКА ЗАКРЫТЬ В ЕДИНОМ ОВАЛЬНОМ СТИЛЕ ========== -->
    <!-- Кнопка Закрыть (серая овальная outline) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_close"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:text="Закрыть"
        android:textColor="#CBD5E1"
        android:textStyle="bold"
        android:textSize="16sp"
        android:fontFamily="@font/krabuler"
        android:backgroundTint="#1E293B"
        app:cornerRadius="24dp"
        app:strokeColor="#475569"
        app:strokeWidth="2dp"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:elevation="0dp"
        android:stateListAnimator="@null"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:contentDescription="Закрыть диалог экспорта" />

</LinearLayout>
