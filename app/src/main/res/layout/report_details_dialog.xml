<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/drawer_background">

    <!-- Заголовок -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_description"
            android:layout_marginEnd="12dp"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/tv_report_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Название работы"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="@font/krabuler" />

    </LinearLayout>

    <!-- Дата -->
    <TextView
        android:id="@+id/tv_report_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Дата: 01.01.2024"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:fontFamily="@font/krabuler"
        android:layout_marginBottom="20dp" />

    <!-- Статистика -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#2C3E50">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📊 Статистика"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="@font/krabuler"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Правильных ответов:"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/krabuler" />

                <TextView
                    android:id="@+id/tv_correct_answers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/success"
                    android:fontFamily="@font/krabuler" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Неправильных ответов:"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/krabuler" />

                <TextView
                    android:id="@+id/tv_incorrect_answers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/error"
                    android:fontFamily="@font/krabuler" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Процент выполнения:"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/krabuler" />

                <TextView
                    android:id="@+id/tv_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/info"
                    android:fontFamily="@font/krabuler" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Итоговая оценка:"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/krabuler" />

                <TextView
                    android:id="@+id/tv_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Оценка 0"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/success"
                    android:fontFamily="@font/krabuler" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Ошибки -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#2C3E50">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="❌ Ошибки"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="@font/krabuler"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(Варианты ответов: 1, 2, 3, 4, 5...)"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/krabuler"
                android:layout_marginBottom="12dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="200dp">

                <LinearLayout
                    android:id="@+id/errors_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </ScrollView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- ========== КНОПКА ЗАКРЫТЬ В ЕДИНОМ ОВАЛЬНОМ СТИЛЕ ========== -->
    <!-- Кнопка Закрыть (серая овальная как в шаблоне) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_close"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Закрыть"
        android:textColor="#CBD5E1"
        android:textStyle="bold"
        android:textSize="16sp"
        android:fontFamily="@font/krabuler"
        android:backgroundTint="#1E293B"
        app:cornerRadius="28dp"
        app:strokeColor="#475569"
        app:strokeWidth="2dp"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:elevation="0dp"
        android:stateListAnimator="@null"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:contentDescription="Закрыть детальный отчет" />

</LinearLayout>
