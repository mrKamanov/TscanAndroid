<?xml version="1.0" encoding="utf-8"?>
<!-- 
========================================
🎯 НАСТРОЙКИ КАМЕРЫ - ОБНОВЛЕННЫЕ СТИЛИ
========================================
Этот файл содержит панель настроек камеры с новыми овальными кнопками
-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="match_parent"
    android:layout_gravity="end"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/menu_card_bg"
        android:padding="20dp">

    <!-- ========== ЗАГОЛОВОК ПАНЕЛИ ========== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginEnd="8dp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Настройки камеры"
            android:textColor="@color/text"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/krabuler" />
        <ImageButton
            android:id="@+id/btn_close_camera_settings"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            android:contentDescription="Закрыть"
            android:tint="@color/text" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#22446688"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp" />

    <!-- ========== КНОПКА СБРОСА НАСТРОЕК (НОВЫЙ СТИЛЬ) ========== -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_reset_camera_settings"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Сбросить настройки"
        android:textColor="#CBD5E1"
        android:textStyle="bold"
        android:textSize="14sp"
        app:icon="@drawable/ic_cancel"
        app:iconTint="#CBD5E1"
        app:iconGravity="textStart"
        app:iconSize="20dp"
        android:backgroundTint="#1E293B"
        app:cornerRadius="28dp"
        app:strokeColor="#475569"
        app:strokeWidth="2dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:layout_marginBottom="24dp"
        android:elevation="0dp"
        android:stateListAnimator="@null"
        android:fontFamily="@font/krabuler"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    <!-- ========== КАСТОМНЫЕ ПОЛЗУНКИ В СТИЛЕ КНОПОК ========== -->
    
    <!-- Яркость -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/slider_container_bg"
        android:padding="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">
            
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_brightness"
                android:tint="#CBD5E1"
                android:layout_marginEnd="12dp" />
                
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Яркость"
                android:textColor="#CBD5E1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/krabuler" />
                
            <TextView
                android:id="@+id/value_brightness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/krabuler"
                android:background="@drawable/value_badge_bg"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp" />
        </LinearLayout>
        
        <SeekBar
            android:id="@+id/seek_brightness"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:max="200"
            android:progress="100"
            android:progressDrawable="@drawable/custom_seekbar_track"
            android:thumb="@drawable/custom_seekbar_thumb"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />
    </LinearLayout>

    <!-- Контрастность -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/slider_container_bg"
        android:padding="20dp"
        android:layout_marginBottom="12dp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">
            
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_contrast"
                android:tint="#CBD5E1"
                android:layout_marginEnd="12dp" />
                
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Контрастность"
                android:textColor="#CBD5E1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/krabuler" />
                
            <TextView
                android:id="@+id/value_contrast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/krabuler"
                android:background="@drawable/value_badge_bg"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp" />
        </LinearLayout>
        
        <SeekBar
            android:id="@+id/seek_contrast"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:max="200"
            android:progress="100"
            android:progressDrawable="@drawable/custom_seekbar_track"
            android:thumb="@drawable/custom_seekbar_thumb"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />
    </LinearLayout>

    <!-- Насыщенность -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/slider_container_bg"
        android:padding="20dp"
        android:layout_marginBottom="12dp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">
            
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_saturation"
                android:tint="#CBD5E1"
                android:layout_marginEnd="12dp" />
                
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Насыщенность"
                android:textColor="#CBD5E1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/krabuler" />
                
            <TextView
                android:id="@+id/value_saturation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/krabuler"
                android:background="@drawable/value_badge_bg"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp" />
        </LinearLayout>
        
        <SeekBar
            android:id="@+id/seek_saturation"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:max="200"
            android:progress="100"
            android:progressDrawable="@drawable/custom_seekbar_track"
            android:thumb="@drawable/custom_seekbar_thumb"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />
    </LinearLayout>

    <!-- Резкость -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/slider_container_bg"
        android:padding="20dp"
        android:layout_marginBottom="16dp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">
            
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_sharpness"
                android:tint="#CBD5E1"
                android:layout_marginEnd="12dp" />
                
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Резкость"
                android:textColor="#CBD5E1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/krabuler" />
                
            <TextView
                android:id="@+id/value_sharpness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/krabuler"
                android:background="@drawable/value_badge_bg"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp" />
        </LinearLayout>
        
        <SeekBar
            android:id="@+id/seek_sharpness"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:max="200"
            android:progress="100"
            android:progressDrawable="@drawable/custom_seekbar_track"
            android:thumb="@drawable/custom_seekbar_thumb"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />
    </LinearLayout>

    <!-- Разделитель -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#22446688"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>
