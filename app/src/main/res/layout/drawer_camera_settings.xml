<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/menu_card_bg"
    android:padding="20dp"
    android:layout_gravity="end">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginEnd="8dp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Настройки камеры"
            android:textColor="@color/text"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/krabuler" />
        <ImageButton
            android:id="@+id/btn_close_camera_settings"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            android:contentDescription="Закрыть"
            android:tint="@color/text" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#22446688"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp" />

    <!-- Яркость -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Яркость"
        android:textColor="@color/text"
        android:textSize="15sp"
        android:fontFamily="@font/krabuler"
        android:layout_marginTop="8dp" />
    <SeekBar
        android:id="@+id/seek_brightness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="200"
        android:progress="100" />
    <TextView
        android:id="@+id/value_brightness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/text"
        android:textSize="13sp"
        android:fontFamily="@font/krabuler"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp" />

    <!-- Контрастность -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Контрастность"
        android:textColor="@color/text"
        android:textSize="15sp"
        android:fontFamily="@font/krabuler"
        android:layout_marginTop="8dp" />
    <SeekBar
        android:id="@+id/seek_contrast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="200"
        android:progress="100" />
    <TextView
        android:id="@+id/value_contrast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:textColor="@color/text"
        android:textSize="13sp"
        android:fontFamily="@font/krabuler"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp" />

    <!-- Насыщенность -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Насыщенность"
        android:textColor="@color/text"
        android:textSize="15sp"
        android:fontFamily="@font/krabuler"
        android:layout_marginTop="8dp" />
    <SeekBar
        android:id="@+id/seek_saturation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="200"
        android:progress="100" />
    <TextView
        android:id="@+id/value_saturation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:textColor="@color/text"
        android:textSize="13sp"
        android:fontFamily="@font/krabuler"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp" />

    <!-- Резкость -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Резкость"
        android:textColor="@color/text"
        android:textSize="15sp"
        android:fontFamily="@font/krabuler"
        android:layout_marginTop="8dp" />
    <SeekBar
        android:id="@+id/seek_sharpness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="200"
        android:progress="100" />
    <TextView
        android:id="@+id/value_sharpness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:textColor="@color/text"
        android:textSize="13sp"
        android:fontFamily="@font/krabuler"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp" />

</LinearLayout> 