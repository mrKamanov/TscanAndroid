<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/menu_card_bg"
        android:padding="20dp">

    <!-- ========== ОВАЛЬНЫЕ КНОПКИ С НОВЫМ СТИЛЕМ ========== -->
    
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_nav_home"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="ГЛАВНАЯ"
        android:textColor="#CBD5E1"
        android:textStyle="bold"
        android:textSize="14sp"
        app:icon="@drawable/overlay_mode_button"
        app:iconTint="#CBD5E1"
        app:iconGravity="textStart"
        app:iconSize="20dp"
        android:backgroundTint="#1E293B"
        app:cornerRadius="28dp"
        app:strokeColor="#475569"
        app:strokeWidth="2dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"
        android:elevation="0dp"
        android:stateListAnimator="@null"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_nav_reports"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="ОТЧЁТЫ"
        android:textColor="#CBD5E1"
        android:textStyle="bold"
        android:textSize="14sp"
        app:icon="@drawable/update_answers_button"
        app:iconTint="#CBD5E1"
        app:iconGravity="textStart"
        app:iconSize="20dp"
        android:backgroundTint="#1E293B"
        app:cornerRadius="28dp"
        app:strokeColor="#475569"
        app:strokeWidth="2dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:layout_marginBottom="16dp"
        android:elevation="0dp"
        android:stateListAnimator="@null"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    <!-- Разделитель -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Настройки"
        android:textColor="@color/text"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/krabuler"
        android:paddingBottom="8dp"
        android:layout_marginTop="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#22446688"
        android:layout_marginBottom="16dp" />

    <!-- ========== КНОПКИ УПРАВЛЕНИЯ КАМЕРОЙ ========== -->
    
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_drawer_start_camera"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Включить камеру"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="14sp"
        app:icon="@drawable/start_camera_button"
        app:iconTint="#FFFFFF"
        app:iconGravity="textStart"
        app:iconSize="20dp"
        android:backgroundTint="#16A34A"
        app:cornerRadius="28dp"
        app:strokeColor="#475569"
        app:strokeWidth="2dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:layout_marginBottom="8dp"
        android:elevation="0dp"
        android:stateListAnimator="@null"
        style="@style/Widget.MaterialComponents.Button" />
        
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_drawer_stop_camera"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Выключить камеру"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="14sp"
        app:icon="@drawable/stop_camera_button"
        app:iconTint="#FFFFFF"
        app:iconGravity="textStart"
        app:iconSize="20dp"
        android:backgroundTint="#DC2626"
        app:cornerRadius="28dp"
        app:strokeColor="#475569"
        app:strokeWidth="2dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:layout_marginBottom="8dp"
        android:elevation="0dp"
        android:stateListAnimator="@null"
        style="@style/Widget.MaterialComponents.Button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_drawer_hide_video"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#1E293B"
            android:elevation="0dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:stateListAnimator="@null"
            android:text="Скрыть видео"
            android:textColor="#CBD5E1"
            android:textSize="14sp"
            android:textStyle="bold"
            app:cornerRadius="28dp"
            app:icon="@drawable/hide_video_button"
            app:iconGravity="textStart"
            app:iconSize="20dp"
            app:iconTint="#CBD5E1"
            app:strokeColor="#475569"
            app:strokeWidth="2dp" />

    <!-- ========== НАСТРОЙКИ СЕТКИ ========== -->
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Параметры сетки"
        android:textColor="@color/text"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="@font/krabuler"
        android:paddingTop="12dp"
        android:paddingBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#222E3440"
        android:padding="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="4dp"
        android:radius="12dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Количество вопросов:"
            android:textColor="@color/text"
            android:textSize="14sp"
            android:fontFamily="@font/krabuler" />
        <EditText
            android:id="@+id/edit_questions"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="number"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:fontFamily="@font/krabuler"
            android:padding="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#222E3440"
        android:padding="12dp"
        android:radius="12dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Количество вариантов:"
            android:textColor="@color/text"
            android:textSize="14sp"
            android:fontFamily="@font/krabuler" />
        <EditText
            android:id="@+id/edit_choices"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="number"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:fontFamily="@font/krabuler"
            android:padding="8dp" />
    </LinearLayout>

    <!-- ========== КНОПКА ПРИМЕНИТЬ ========== -->
    
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_apply_grid_settings"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="ПРИМЕНИТЬ"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="14sp"
        app:icon="@drawable/apply_settings_button"
        app:iconTint="#FFFFFF"
        app:iconGravity="textStart"
        app:iconSize="20dp"
        android:backgroundTint="#16A34A"
        app:cornerRadius="28dp"
        app:strokeColor="#475569"
        app:strokeWidth="2dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        android:elevation="0dp"
        android:stateListAnimator="@null"
        style="@style/Widget.MaterialComponents.Button" />

    </LinearLayout>
</ScrollView>