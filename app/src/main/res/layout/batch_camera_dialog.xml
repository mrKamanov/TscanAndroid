<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background_dark"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Фотографирование бланков"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_inverse"
        android:fontFamily="@font/krabuler"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Укажите начальный номер работы:"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/et_start_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:digits="0123456789"
        android:text="1"
        android:hint="Начальный номер"
        android:textColor="@color/text_inverse"
        android:textColorHint="@color/text_secondary"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Фотографируйте бланки по одному. Каждой работе будет присвоен номер 'Работа X'."
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="16dp" />

    <!-- ========== КНОПКИ В ЕДИНОМ ОВАЛЬНОМ СТИЛЕ ========== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Кнопка Отмена (серая овальная как в шаблоне) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel_camera"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Отмена"
            android:textColor="#CBD5E1"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="@font/krabuler"
            android:backgroundTint="#1E293B"
            app:cornerRadius="28dp"
            app:strokeColor="#475569"
            app:strokeWidth="2dp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:layout_marginEnd="8dp"
            android:elevation="0dp"
            android:stateListAnimator="@null"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:contentDescription="Отменить фотографирование" />

        <!-- Кнопка Начать (зеленая овальная как в шаблоне) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_start_camera"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Начать"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="@font/krabuler"
            android:backgroundTint="#16A34A"
            app:cornerRadius="28dp"
            app:strokeColor="#475569"
            app:strokeWidth="2dp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:layout_marginStart="8dp"
            android:elevation="0dp"
            android:stateListAnimator="@null"
            style="@style/Widget.MaterialComponents.Button"
            android:contentDescription="Начать фотографирование бланков" />
    </LinearLayout>

</LinearLayout>
