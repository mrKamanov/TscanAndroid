<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/drawer_background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="➕ Добавить новые критерии"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="@font/krabuler"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Название критериев -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Название:"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:fontFamily="@font/krabuler"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/et_criteria_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите название критериев"
        android:textColor="@color/white"
        android:textColorHint="@color/text_secondary"
        android:background="@drawable/menu_card_bg"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Тип критериев -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Тип критериев:"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:fontFamily="@font/krabuler"
        android:layout_marginBottom="8dp" />

    <RadioGroup
        android:id="@+id/rg_criteria_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/rb_percentage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="По процентам"
            android:textColor="@color/white"
            android:fontFamily="@font/krabuler"
            android:checked="true" />

        <RadioButton
            android:id="@+id/rb_points"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="По баллам"
            android:textColor="@color/white"
            android:fontFamily="@font/krabuler" />

    </RadioGroup>

    <!-- Настройки оценок -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Настройки оценок:"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:fontFamily="@font/krabuler"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Оценка 5:"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:fontFamily="@font/krabuler"
            android:layout_marginEnd="8dp" />

        <EditText
            android:id="@+id/et_grade_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="90"
            android:inputType="numberDecimal"
            android:textColor="@color/white"
            android:textColorHint="@color/text_secondary"
            android:background="@drawable/menu_card_bg"
            android:padding="8dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Оценка 4:"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:fontFamily="@font/krabuler"
            android:layout_marginEnd="8dp" />

        <EditText
            android:id="@+id/et_grade_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="75"
            android:inputType="numberDecimal"
            android:textColor="@color/white"
            android:textColorHint="@color/text_secondary"
            android:background="@drawable/menu_card_bg"
            android:padding="8dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Оценка 3:"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:fontFamily="@font/krabuler"
            android:layout_marginEnd="8dp" />

        <EditText
            android:id="@+id/et_grade_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="51"
            android:inputType="numberDecimal"
            android:textColor="@color/white"
            android:textColorHint="@color/text_secondary"
            android:background="@drawable/menu_card_bg"
            android:padding="8dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Оценка 2:"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:fontFamily="@font/krabuler"
            android:layout_marginEnd="8dp" />

        <EditText
            android:id="@+id/et_grade_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="0"
            android:inputType="numberDecimal"
            android:textColor="@color/white"
            android:textColorHint="@color/text_secondary"
            android:background="@drawable/menu_card_bg"
            android:padding="8dp" />

    </LinearLayout>

    <!-- ========== ДВЕ КНОПКИ В ЕДИНОМ ОВАЛЬНОМ СТИЛЕ ========== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Кнопка Отмена (серая овальная outline) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Отмена"
            android:textColor="#CBD5E1"
            android:textStyle="bold"
            android:textSize="14sp"
            android:fontFamily="@font/krabuler"
            android:backgroundTint="#1E293B"
            app:cornerRadius="24dp"
            app:strokeColor="#475569"
            app:strokeWidth="2dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:elevation="0dp"
            android:stateListAnimator="@null"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:contentDescription="Отменить добавление критериев" />

        <!-- Кнопка Сохранить (зеленая овальная) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Сохранить"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="14sp"
            android:fontFamily="@font/krabuler"
            android:backgroundTint="#16A34A"
            app:cornerRadius="24dp"
            app:strokeColor="#475569"
            app:strokeWidth="2dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:elevation="0dp"
            android:stateListAnimator="@null"
            style="@style/Widget.MaterialComponents.Button"
            android:contentDescription="Сохранить новые критерии" />

    </LinearLayout>

</LinearLayout>
