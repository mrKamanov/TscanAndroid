<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout_reports"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Основной контент -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Инфографика - 2/3 экрана -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/statistics_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:nestedScrollingEnabled="false" />

        <!-- Разделитель -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/text_secondary"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp" />

        <!-- Список отчетов - 1/3 экрана -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📋 Список работ"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:fontFamily="@font/krabuler"
                android:layout_marginBottom="16dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/reportsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:nestedScrollingEnabled="false" />

            <TextView
                android:id="@+id/empty_state_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📭 Отчеты отсутствуют\n\nДобавьте работы через сканирование для создания отчетов"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/krabuler"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginTop="32dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Боковое меню -->
    <include
        android:id="@+id/nav_view"
        layout="@layout/drawer_reports_menu"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start" />

</androidx.drawerlayout.widget.DrawerLayout> 