<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout_reports"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Основной контент -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Верхняя панель -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">
            <ImageButton
                android:id="@+id/btn_menu_reports"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:contentDescription="Меню" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="📋 Отчёты"
                android:textColor="@color/text"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/krabuler" />

        </LinearLayout>

        <!-- Список отчётов -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/reportsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="16dp"
            android:clipToPadding="false" />

        <!-- Состояние пустого списка -->
        <TextView
            android:id="@+id/empty_state_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="📋 Отчеты отсутствуют\n\nДобавьте результаты проверки в окне сканирования"
            android:textAlignment="center"
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            android:visibility="gone"
            android:padding="32dp" />

    </LinearLayout>

    <!-- Боковое меню -->
    <LinearLayout
        android:id="@+id/drawer_reports"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/menu_card_bg"
        android:padding="20dp"
        android:layout_gravity="start">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Меню"
            android:textColor="@color/text"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/krabuler"
            android:paddingBottom="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#22446688"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Настройки"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/krabuler"
            android:paddingTop="12dp"
            android:paddingBottom="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#22446688"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Текущие критерии:"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/current_criteria_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="По процентам (по умолчанию)"
                android:textColor="@color/text"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btn_criteria_settings_drawer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Изменить критерии"
                android:backgroundTint="@color/primary"
                android:textColor="@color/text_inverse"
                android:textSize="12sp"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btn_add_criteria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Добавить новые"
                android:backgroundTint="@color/secondary"
                android:textColor="@color/text_inverse"
                android:textSize="12sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_reset_reports"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Сбросить отчёты"
            android:backgroundTint="@color/error"
            android:textColor="@color/text_inverse"
            android:layout_marginBottom="8dp" />

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout> 