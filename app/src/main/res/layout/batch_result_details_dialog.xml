<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/background"
    android:padding="0dp">

    <!-- Заголовок -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/surface"
        android:padding="20dp"
        android:elevation="4dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Результат проверки"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_inverse"
            android:fontFamily="@font/krabuler" />

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_close_white"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:contentDescription="Закрыть" />
    </LinearLayout>

    <!-- Основной контент -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Изображение с результатами -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/tv_image_caption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Найденный контур (зеленая рамка)"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="@font/krabuler"
                    android:gravity="center"
                    android:layout_marginBottom="12dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/card_background"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <ImageView
                        android:id="@+id/iv_result_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:padding="8dp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Статистика -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Статистика"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_inverse"
                        android:fontFamily="@font/krabuler"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:id="@+id/tv_correct_count"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Правильно: 4"
                            android:textColor="@color/success_green"
                            android:textSize="14sp"
                            android:fontFamily="@font/krabuler"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tv_total_questions"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Всего: 5"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            android:fontFamily="@font/krabuler"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_percentage"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Процент: 80%"
                            android:textColor="@color/primary_blue"
                            android:textSize="14sp"
                            android:fontFamily="@font/krabuler"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tv_grade"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Оценка: 4"
                            android:textColor="@color/primary_blue"
                            android:textSize="14sp"
                            android:fontFamily="@font/krabuler"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Детали ошибок -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Детали ошибок"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_inverse"
                        android:fontFamily="@font/krabuler"
                        android:layout_marginBottom="12dp" />

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxHeight="120dp">

                        <LinearLayout
                            android:id="@+id/layout_error_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" />
                    </ScrollView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ========== КНОПКА В ЕДИНОМ ОВАЛЬНОМ СТИЛЕ ========== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Кнопка Добавить в отчет (зеленая овальная) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_add_to_report"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Добавить в отчет"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/krabuler"
                    android:backgroundTint="#16A34A"
                    app:cornerRadius="28dp"
                    app:strokeColor="#475569"
                    app:strokeWidth="2dp"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp"
                    android:layout_marginBottom="12dp"
                    android:elevation="0dp"
                    android:stateListAnimator="@null"
                    style="@style/Widget.MaterialComponents.Button"
                    android:contentDescription="Добавить результат в отчет" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
